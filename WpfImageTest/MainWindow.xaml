<Window x:Class="WpfImageTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfImageTest"
        mc:Ignorable="d"
        AllowDrop="True"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <StackPanel>
            <TextBox Name="TextBox1"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Name="Button1" Click="Button1_Click" >Button1</Button>
                <Button Name="LeftButton"  Width="80" Click="LeftButton_Click" >←</Button>
                <Button Name="RightButton" Width="80" Click="RightButton_Click" >→</Button>
            </StackPanel>
            <Grid Name="MainGrid"></Grid>
        </StackPanel>
    </Grid>
</Window>
